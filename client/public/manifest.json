{
	"manifest_version": 3,
	"name": "Blablah Chatnet: Realtime live chat on all websites",
	"version": "1.0",
	"description": "Realtime live chat on all websites",
	"icons": {
		"16": "logo.png",
		"48": "logo.png",
		"128": "logo.png"
	},
	"background": {
		"service_worker": "service-worker.js"
	},
	"action": {
		"default_title": "Click to open panel"
	},
	"side_panel": {
		"default_path": "index.html"
	},
	"permissions": ["sidePanel", "tabs", "activeTab", "storage", "webRequest"]
}
